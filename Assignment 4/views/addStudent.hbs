<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Add Student</h2>
            <form method="post" action="/students/add">
                <fieldset>
                    <legend>Student Information</legend>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstName">First Name:</label>
                                <input class="form-control" id="firstName" name="firstName" type="text">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="last_name">Last Name:</label>
                                <input class="form-control" id="lastName" name="lastName" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input class="form-control" id="email" name="email" type="email">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="phone">Phone:</label>
                                <input class="form-control" id="phone" name="phone" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressStreet">Address (Street):</label>
                                <input class="form-control" id="addressStreet" name="addressStreet" type="text">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label for="addressCity">Address (City):</label>
                            <input class="form-control" id="addressCity" name="addressCity" type="text">
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressState">Address (State):</label>
                                <input class="form-control" id="addressState" name="addressState" type="text">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressPostal">Address (ZIP Code):</label>
                                <input class="form-control" id="addressPostal" name="addressPostal" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                    <div class="form-group">
                        <label>Status:</label><br>
                        <label class="checkbox-inline">
                            <input type="radio" id="statusFT" name="status" value="Full Time"> Full Time </label>
                        <label class="checkbox-inline">
                            <input type="radio" id="statusPT" name="status" value="Part Time"> Part Time</label>
                    </div>
                </div>
                </fieldset>
                
                <fieldset>
                    <div class="col-md-3">
                            <div class="form-group">
                                <label for="program">Programs</label>
                                <select class="form-control" name="program" id="program">                                  <option value="ACF">ACF - Accounting and Finance</option>
                                <option value="AVO">AVO - Aviation Operations</option>
                                <option value="DAN">DAN - 3D Animation</option>
                                <option value="CPP">CPP - Computer Programming</option>
                                <option value="CPA">CPA - Computer Programming and Analysis</option>
                                <option value="CTY">CTY - Computer Systems Technology</option>
                                <option value="CSN">CSN - Computer Systems Technician</option>
                                <option value="BSD">BSD - Software Development (Honours Bachelor of Technology)</option>
                                <option value="IFS">IFS - Informatics and Security(Honours Bachelor of Technology)</option>
                                <option value="DAS">DAS - Data Science and Analytics program (Honours Bachelor of Technology)</option>
                                </select>
                            </div>
                        </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="isInternational">International Student?:</label>
                                <input class="form-control" type="checkbox" name="isInternational">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="expectedCredentials">Expected Credentials</label>
                                <input class="form-control" id="expectedCredentials" name="expectedCredentials"
                                    type="text">
                            </div>
                        </div>  
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="registrationDate">Registration Date</label>
                                <input class="form-control" id="registrationDate" name="registrationDate" type="text">
                            </div>
                        </div>
                    </div>
                </fieldset>
                <input type="submit" class="btn btn-primary pull-right" value="Add Student">
            </form>
        </div>
    </div>
</div>